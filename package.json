{
    "name": "@genx/model",
    "version": "2.0.0",
    "description": "Meta programming DSL specially for automating database structure creation and data access.",
    "main": "lib/index.js",
    "bin": {
        "genx-eml": "bin/geml.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "start": "babel-node --source-maps ./src/cli/index -- --config=test/geml.json",
        "doc": "jsdoc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -d './docs/api' -r --verbose ./src",
        "jison": "./scripts/build-grammar.sh",
        "test:spec": "mocha test/*.spec.js",
        "test:unit": "mocha --recursive src/**/*.spec.js --timeout 5000",
        "test": "pnpm run test:unit && pnpm run test:spec",
        "cover": "nyc --reporter=html --reporter=text mocha test/*.spec.js --recursive src/**/*.spec.js --timeout 5000",
        "clean": "del-cli lib .nyc_output coverage",
        "build": "pnpm run clean && NODE_ENV=production babel src -d lib --ignore \"**/__test__/*.js\" --source-maps --copy-files --no-copy-ignored"
    },
    "repository": "https://github.com/genx-tech/gx-model",
    "bugs": {
        "url": "https://github.com/genx-tech/gx-model/issues"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "license": "MIT",
    "nyc": {
        "exclude": [
            "babel.config.js",
            "test",
            "lib",
            "**/*.spec.js",
            "src/lang/grammar"
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/plugin-proposal-class-properties": "^7.14.5",
        "@babel/plugin-proposal-decorators": "^7.14.5",
        "@babel/preset-env": "^7.15.0",
        "@babel/register": "^7.15.3",
        "@genx/app": "^2.0.2",
        "@genx/babelnode": "^7.14.9",
        "@genx/data": "^2.0.2",
        "@genx/server": "^2.0.2",
        "@genx/test": "^2.0.1",
        "babel-plugin-source-map-support": "^2.1.3",
        "del-cli": "^4.0.1",
        "jison": "^0.4.18",
        "mocha": "^9.1.1",
        "mongodb": "^3.5.5",
        "mysql2": "^2.3.3",
        "nyc": "^15.1.0",
        "should": "^13.2.3",
        "source-map-support": "^0.5.19"
    },
    "dependencies": {
        "@genx/algorithm": "github:genx-tech/gx-algorithm#v2",
        "@genx/error": "*",
        "@genx/july": "*",
        "@genx/sys": "*",
        "deep-freeze": "0.0.1",
        "escodegen": "^2.0.0",
        "exceljs": "^1.7.0",
        "fast-deep-equal": "^3.1.3",
        "http-status-codes": "^1.3.0",
        "immutable": "^4.0.0-rc.12",
        "inquirer": "^6.2.0",
        "number-to-letter": "^1.0.1",
        "pluralize": "^7.0.0",
        "swig-templates": "^2.0.3"
    }
}
