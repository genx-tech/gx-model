import types

//----------------------------------------------------------------------------------------------------     

entity setting is dataTypeDictionary
  -- "Settings"
  has
    category: name     
    text optional
    intValue: integer optional
    numValue: number optional
    object optional 
    flag: boolean optional
    timestamp: datetime optional
  input
    edit
      text optional
      intValue optional
      numValue optional
      object optional 
      flag optional
      timestamp optional
  data [
    { category: 'general', isSystem: true, isActive: true, dataType: 'text', values: [ "en-AU", "zh-CN", "zh-TW" ], code: 'DEFAULT_LOCALE', name: 'Default system locale', text: 'en-AU', desc: 'The default locale used by the system.' },
    { category: 'general', isSystem: true, isActive: true, dataType: 'text', values: [ "Australia/Sydney", "Asia/Shanghai", "Asia/Taibei" ], code: 'DEFAULT_TIMEZONE', name: 'Default system timezone', text: 'Australia/Sydney', desc: 'The default timezone used by the system.' },
    { category: 'general', isSystem: true, isActive: true, dataType: 'boolean', code: 'SYSTEM_MAINTAIN_FLAG', name: 'System maintainence flag', flag: false, desc: 'Set this flag to true when the system is under maintainence state.' }        
  ]

//----------------------------------------------------------------------------------------------------     

entity syslog is hyperIdIndexed
  -- "System logging"
  with
    createTimestamp
  has
    category : name
    level : shortName
    message : text
    stack : desc

